extends ../public/layout

block content
    form.form-horizontal(method="post", role="form")
        h1.title= lang.title

        div.section
            div=lang.worktitle
            div.form-group
                label.col-sm-3(for="work")= lang.work.text
                div.col-sm-6
                    input.form-control#work(type="text", name="work", placeholder= lang.work.placeholder)

            div.form-group
                label.col-sm-3(for="assignee")= lang.assignee.text
                div.col-sm-6
                    select.form-control#assignee(name="assignee")
                        for ass in lang.assignee.assignees
                            option= ass

            div.form-group
                label.col-sm-3(for="duration")= lang.duration.text
                div.col-sm-6
                    select.form-control#duration(name="duration")
                        for ass in lang.duration.times
                            option= ass

            div.form-group
                label.col-sm-3(for="location")= lang.location.text
                div.col-sm-6
                    input.form-control#location(type="text", name="location", placeholder= lang.location.placeholder)

            div.form-group
                label.col-sm-3(for="description")= lang.description.text
                div.col-sm-9
                    textarea.form-control#description(type="text", name="contact", placeholder= lang.description.placeholder)

            div.form-group
                label.col-sm-3.col-xs-12(for="document")= lang.document.text
                div.col-sm-6.col-xs-8
                    input.form-control#document(type="text", name="document", placeholder= lang.document.placeholder)
                div.col-sm-2.col-xs-4
                    button.btn.btn-default.btn-info= lang.document.button

            div.form-group
                div.col-sm-3
                div.col-sm-9
                    table.table-bordered.table-condensed.file-upload.col-sm-12
                        thead
                            tr
                                th.col-sm-8= lang.document.thname
                                th.col-sm-4= lang.document.thdate
                        tbody

            div.form-group
                label.col-sm-3= lang.billiable.text
                label.col-sm-2
                    input(type="radio",name="billiable",value="1" checked)
                    =lang.billiable.yes
                label.col-sm-2
                    input(type="radio",name="billiable",value="2" checked)
                    =lang.billiable.no

            div.form-group
                label.col-sm-3(for="billingrate")=lang.billingrate.text
                div.col-sm-6
                    select.form-control#billingrate
                        for rate in lang.billingrate.rates
                            option= rate

            div.form-group
            div.form-group
                div.col-sm-3
                    label=lang.autoreminder.text
                div.col-sm-9
                    div.col-sm-12.col-md-4.reminder
                        label
                            input(for="notifyclient",type="checkbox")
                            =lang.autoreminder.notifyclient
                    div.col-sm-12.col-md-8.reminder.reminder-box
                        div.col-sm-2.col-xs-3
                            label=lang.autoreminder.reminder
                        div.col-sm-3.col-xs-8
                            select.form-control
                                for ti in lang.autoreminder.time
                                    option= ti
                        div.col-sm-7.col-xs-12
                            label.reminder-check
                                input(type="checkbox",name="wemail")
                                =lang.autoreminder.email
                            label.reminder-check
                                input(type="checkbox",name="wphone")
                                =lang.autoreminder.phone
                            label.reminder-check
                                input(type="checkbox",name="wsms")
                                =lang.autoreminder.sms
            div.form-group
                div.col-sm-3
                div.col-sm-9
                    div.col-sm-12.col-md-4.reminder
                        label
                            input(for="notifystaff",type="checkbox")
                            =lang.autoreminder.notifystaff
                    div.col-sm-12.col-md-8.reminder.reminder-box
                        div.col-sm-2.col-xs-3
                            label=lang.autoreminder.reminder
                        div.col-sm-3.col-xs-8
                            select.form-control
                                for ti in lang.autoreminder.time
                                    option= ti
                        div.col-sm-7.col-xs-12
                            label.reminder-check
                                input#wemail(type="checkbox",name="wemail")
                                =lang.autoreminder.email
                            label.reminder-check
                                input#wphone(type="checkbox",name="wphone")
                                =lang.autoreminder.phone
                            label.reminder-check
                                input#wsms(type="checkbox",name="wsms")
                                =lang.autoreminder.sms
            div.form-group
                label.col-sm-3=lang.remindermes.text
                div.col-sm-9
                    textarea.form-control(placeholder=lang.remindermes.placeholder)

        div.section
            div.form-group
                div.buttons.col-sm-9.col-sm-offset-3.col-xs-12
                    button.btn.btn-default.btn-info=lang.buttons.clear
                    button.btn.btn-default.btn-info=lang.buttons.add
                    button.btn.btn-default.btn-info=lang.buttons.save

block footer
    include ../public/footer
