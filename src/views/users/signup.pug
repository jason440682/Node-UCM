extends layout

block ownStyles
    link(type="text/css", rel="stylesheet", href="/scripts/lib/bootstrap-fileinput/css/fileinput.min.css")

block ownScripts
    script(src="/scripts/lib/bootstrap-fileinput/js/fileinput.js")

block content
    form.form-horizontal#form(method="post", role="form", action="register")
        h1.title= lang.title
        div.section
            div.form-group
                label.col-sm-4(for="username")
                    span.highlight *
                    = lang.username.text
                div.col-sm-5
                    input.form-control.required#username(type="text", name="userName", placeholder= lang.username.placeholder)

            div.form-group
                label.col-sm-4(for="password")
                    span.highlight *
                    = lang.password.text
                div.col-sm-5
                    input.form-control.required#password(type="password", name="hashedPassword", placeholder= lang.password.placeholder)

            div.form-group
                label.col-sm-4(for="confirm")
                    span.highlight *
                    = lang.confirm.text
                div.col-sm-5
                    input.form-control.required#confirm(type="password", name="confirm", placeholder= lang.confirm.placeholder)

            div.form-group
                label.col-sm-4(for="question")
                    span.highlight *
                    = lang.question.text
                div.col-sm-5
                    input.form-control.required#question(type="text", name="securityQuestion", placeholder= lang.question.placeholder)

            div.form-group
                label.col-sm-4(for="answer")
                    span.highlight *
                    = lang.answer.text
                div.col-sm-5
                    input.form-control.required#answer(type="text", name="securityQuestionAnswer", placeholder= lang.answer.placeholder)

            div.form-group
                div.radio.col-sm-5
                    span.label-text.col-sm-7
                        span.highlight *
                        = lang.auto_login.text
                    div.col-sm-5
                        label.col-sm-6
                            input(type="radio", name="enable2FactorAuthenticationLogin", value="1" checked)
                            = lang.auto_login.yes
                        label.col-sm-6
                            input(type="radio", name="enable2FactorAuthenticationLogin", value="0")
                            = lang.auto_login.no

                div.radio.col-sm-7
                    span.label-text.col-sm-5= lang.send_code.text
                    div.col-sm-7
                        label.col-sm-7
                            input(type="radio", name="sendPasscodeToDeviceId", value="1" checked)
                            = lang.send_code.mobile
                        label.col-sm-5
                            input(type="radio", name="sendPasscodeToDeviceId", value="2")
                            = lang.send_code.email

        div.section
            div.form-group
                label.col-sm-4(for="first-name")
                    span.highlight *
                    = lang.first_name.text
                div.col-sm-5
                    input.form-control.required#first-name(type="text", name="firstName", placeholder= lang.first_name.placeholder)

            div.form-group
                label.col-sm-4(for="last-name")
                    span.highlight *
                    = lang.last_name.text
                div.col-sm-5
                    input.form-control.required#last-name(type="text", name="lastName", placeholder= lang.last_name.placeholder)

            div.form-group
                label.col-sm-4(for="email")
                    span.highlight *
                    = lang.email_address.text
                div.col-sm-5
                    input.form-control.required#email(type="email", name="eMailAddress", placeholder= lang.email_address.placeholder)

            div.form-group
                label.col-sm-4(for="phone-number")
                    span.highlight *
                    = lang.mobile_num.text
                div.col-sm-5
                    input.form-control.required#phone-number(type="tel", name="phoneNumber", placeholder= lang.mobile_num.placeholder)

            div.form-group
                label.col-sm-4(for="other-phone")= lang.other_num.text
                div.col-sm-5
                    input.form-control#other-phone(type="tel", name="otherPhone", placeholder= lang.other_num.placeholder)

        div.section
            div.form-group
                label.col-sm-4(for="businessName")
                    span.highlight *
                    = lang.business_name.text
                div.col-sm-5
                    input.form-control.required#businessName(type="text", name="businessName", placeholder= lang.business_name.placeholder)

            div.form-group
                label.col-sm-4(for="businessType")= lang.business_type.text
                div.col-sm-5
                    select.form-control#businessType(name="businessTypeId")
                        for type in businessTypes
                            option(value=type.businessTypeId)= type.businessType

            div.form-group
                label.col-sm-4(for="timeZone")= lang.time_zone.text
                div.col-sm-5
                    select.form-control#timeZone(name="businessTimeZoneId")
                        for zone in timezones
                            option(value=zone.timeZoneId)= zone.timeZoneLocation + '\t' + zone.gmt

            div.form-group
                label.col-sm-4(for="businessEmail")= lang.business_email.text
                div.col-sm-5
                    input.form-control#businessEmail(type="email", name="businessEMail", placeholder= lang.business_email.placeholder)

            div.form-group
                label.col-sm-4(for="businessPhone")= lang.business_phone.text
                div.col-sm-5
                    input.form-control#businessPhone(type="tel", name="businessPhoneNumber", placeholder= lang.business_phone.placeholder)

            div.form-group
                label.col-sm-4(for="addStreet")= lang.business_address.text
                div.col-sm-5.country
                    input.form-control#addStreet(type="text", name="businessAddressStreet", placeholder= lang.business_address.placeholder.street)
                    input.form-control(type="text", name="businessAddressCity", placeholder= lang.business_address.placeholder.city)
                    input.form-control(type="text", name="businessAddressStateProvince", placeholder= lang.business_address.placeholder.state)
                    input.form-control(type="text", name="businessAddressZipCode", placeholder= lang.business_address.placeholder.zip_code)
                    select.form-control(name="businessCountryId")
                        for country in countries
                            option(value=country.countryId)= country.countryCode + "\t(" + country.countryName + ")"

            div.form-group
                label.col-sm-4(for="businessDescription")= lang.business_description.text
                div.col-sm-5
                    textarea.form-control#businessDescription(name="businessDescription", placeholder= lang.business_description.placeholder)

            div.form-group
                label.col-sm-4(for="logo")= lang.logo.text
                div.col-sm-5
                    input#upload-logo(placeholder= lang.logo.placeholder, type="file", class="file", data-preview-file-type="text")

            div.form-group
                label.col-sm-4(for="verification-code")
                    span.highlight *
                    = lang.validate.text
                div.col-sm-5
                    input.form-control.required#verification-code(type="text", name="verificationCode", placeholder= 'validate code')

            div.form-group
                div.col-sm-4.col-sm-offset-4.verification-code
                    img#verification-code-image(src='/api/validate', alt="validate code")

        div.section
            button.btn.btn-primary.submit#submit(type="submit")= lang.submit_btn.text

